<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/settings_category"
        android:key="pref_key_storage_settings">
        <ListPreference
            android:key="interval_key"
            android:title="@string/interval_setting"
            android:summary="%s"
            android:defaultValue="@string/interval_setting_default"
            android:dialogTitle="@string/interval_setting"
            android:entries="@array/interval_array"
            android:entryValues="@array/interval_array_values"/>
    </PreferenceCategory>
    <Preference android:title="Apply"
        android:key="@string/apply_button"
        android:summary="Apply changes and restart the service"/>
</PreferenceScreen>